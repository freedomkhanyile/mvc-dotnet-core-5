@model MVC.NetCore5.Web.Data.Models.Category

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group  pl-3">
            <h1 class="text-primary">
                Delete Category?
            </h1>
        </div>
        <div class="pl-3">
            <div class="col-6">
                <div class="form-group row">
                     <input type="text" asp-for="Name" disabled class="form-control" id="inputName" aria-describedby="nameHelp">
                  </div>
                <div class="form-group row">
                     <input type="number" asp-for="DisplayOrder" disabled class="form-control" id="inputDisplayOrder" aria-describedby="displayOrderHelp">
                 </div>
                <div class="form-group row">
                    <div class="row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete">
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn bg-transparent" style="color: #bdc3c7">
                                Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}