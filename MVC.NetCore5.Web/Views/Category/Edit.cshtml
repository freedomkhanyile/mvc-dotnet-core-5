@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group  pl-3">
            <h1 class="text-primary">
                Edit Category
            </h1>
        </div>
        <div class="pl-3">
            <div class="col-6">
                <div class="form-group row">
                    <label for="inputName" asp-for="Name" class="form-label"></label>
                    <input type="text" asp-for="Name" class="form-control" id="inputName" aria-describedby="nameHelp">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label for="inputDisplayOrder" asp-for="DisplayOrder" class="form-label"></label>
                    <input type="number" asp-for="DisplayOrder" class="form-control" id="inputDisplayOrder" aria-describedby="displayOrderHelp">
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update">
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn bg-transparent" style="color: #bdc3c7">
                                Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}