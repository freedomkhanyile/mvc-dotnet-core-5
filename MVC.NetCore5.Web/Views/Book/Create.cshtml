@model MVC.NetCore5.Web.Data.Models.Book

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group  pl-3">
            <h1 class="text-primary">
                Add Book
            </h1>
        </div>
        <div class="pl-3">
            <div class="col-6">
                <div class="form-group row">
                    <label for="inputName" asp-for="Name" class="form-label"></label>
                    <input type="text" asp-for="Name" class="form-control" id="inputName" aria-describedby="nameHelp">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label for="inputISBN" asp-for="ISBN" class="form-label"></label>
                    <input type="text" asp-for="ISBN" class="form-control" id="inputISBN" aria-describedby="iSBNHelp">
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label for="inputAuthor" asp-for="Author" class="form-label"></label>
                    <input type="text" asp-for="Author" class="form-control" id="inputAuthor" aria-describedby="authorHelp">
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label for="inputYear" asp-for="Year" class="form-label"></label>
                    <input type="number" asp-for="Year" class="form-control" id="inputYear" aria-describedby="yearHelp">
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="row">
                        <div class="col">
                            <input type="submit" class="btn btn-success w-100" value="Create">
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn bg-transparent" style="color: #bdc3c7">
                                Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}